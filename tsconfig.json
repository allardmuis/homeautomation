{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "target": "ES2017",
    "jsx": "react",
    "outDir": "build",
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
